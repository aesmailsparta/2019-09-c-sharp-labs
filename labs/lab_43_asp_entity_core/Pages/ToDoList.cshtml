@page
@model lab_43_asp_entity_core.Pages.Shared.ToDoListModel
@{
    ViewData["Title"] = "ToDoList";
}

<h2>ToDoList</h2>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">To Do</th>
            <th scope="col">Date Created</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in @Model.MyItems){

            <tr>
                <td>@item.ToDoItemId</td>
                <td>@item.ToDoItemName</td>
                <td>@item.DateCreated.ToShortDateString()</td>
            </tr>

        }
    </tbody>
</table>